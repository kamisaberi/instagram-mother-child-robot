<UserControl x:Class="InstaBotWpfMui.Content.MotherChildConfigurationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel Style="{StaticResource ContentRoot}" LastChildFill="True" Margin="0,0,0,0">
        <StackPanel DockPanel.Dock="Bottom">
            <Button HorizontalAlignment="Right" Name="btnSave" Width="200" Height="30" Content="Save" Click="btnSave_Click"></Button>
        </StackPanel>
        <ScrollViewer Margin="0,0,0,0">
            <StackPanel MinWidth="200">
                <TextBlock Text="CONFIGURE MOTHER/CHILD" Style="{StaticResource Heading2}" />
                <StackPanel Width="200" HorizontalAlignment="Left">
                    <TextBlock Text="select mother account:"></TextBlock>
                    <ComboBox Name="cmbSelectMotherAccount">
                        
                    </ComboBox>                    
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
    </DockPanel>
</UserControl>
